<mvc:View
        displayBlock="true"
        controllerName="tmp_demo.controller.User.User"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:table="sap.ui.table"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
>

  <Page
          showHeader="true"
          enableScrolling="true"
          class="sapUiContentPadding">

    <Table
            inset="true"
            items="{path: 'mainModel>/Data'}">
      <headerToolbar>
        <Toolbar>
          <content>
            <Label text="User"/>
            <Input id="userInp" width="auto" value=""/>
            <Button icon="sap-icon://add" press="addUserPress"/>
            <ToolbarSpacer />
            <Button icon="sap-icon://refresh" press="refreshDatePress"/>
          </content>
        </Toolbar>
      </headerToolbar>
      <columns>
        <Column>
          <Text text="Id"/>
        </Column>
        <Column>
          <Text text="name"/>
        </Column>
        <Column>
          <Text text="Is Active"/>
        </Column>
        <Column hAlign="End">
          <Text text=""/>
        </Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <Text text="{mainModel>id}"/>
            <HBox>
              <Text text="{mainModel>name}"/>
              <Input value="{mainModel>name}" visible="false"/>
            </HBox>
            <Switch state="{mainModel>isComplete}"
                    customTextOn="Yes"
                    customTextOff="No"
                    change="onStatesUpdate"
                                >
              <layoutData>
                <FlexItemData growFactor="1" />
              </layoutData>
            </Switch>
            <HBox justifyContent="End">
              <Button icon="sap-icon://edit" press="onEditPress"/>
              <Button icon="sap-icon://delete" press="onDeletePress"/>
              <Button icon="sap-icon://save" visible="false" press="onSavePress"/>
              <Button icon="sap-icon://cancel" visible="false" press="onCancel"/>
            </HBox>
          </cells>
        </ColumnListItem>
      </items>
    </Table>

  </Page>

</mvc:View>
